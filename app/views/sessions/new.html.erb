<% provide(:title, "Se connecter") %>
<h1>Connexion</h1>
<%= flash[:alert] %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %> <br />

      <%= f.submit "Se connecter", class: "btn btn-outline-primary" %>
    <% end %> <br />

    <p>Pas encore des n√¥tres? <%= link_to "Inscris-toi ici", new_user_path %></p>
  </div>
</div>
